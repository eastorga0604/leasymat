<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_move_form_inherit_financing" model="ir.ui.view">
    <field name="name">account.move.form.financing</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">

      <!-- Hide Customer -->
      <xpath expr="//field[@name='partner_id']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <!-- Replace Customer Label with Financing Agency + add Invoice Title label -->
      <xpath expr="//label[@for='partner_id']" position="replace">
        <field name="financing_agency_id"/>
        <field name="invoice_title"/>
      </xpath>

      <xpath expr="//tree/field[@name='name']" position="after">
        <field name="x_description"
               string="Description"
               widget="text"
               optional="show"
               style="min-width:320px"/>
      </xpath>

    </field>
  </record>
</odoo>